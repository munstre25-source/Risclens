{
  "functions": {
    "app/api/generate-pdf/route.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "app/api/cron/day-3/route.ts": {
      "memory": 512,
      "maxDuration": 60
    },
    "app/api/cron/day-7/route.ts": {
      "memory": 512,
      "maxDuration": 60
    },
    "app/api/admin/export-csv/route.ts": {
      "memory": 512,
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/day-3",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/day-7",
      "schedule": "0 9 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}

