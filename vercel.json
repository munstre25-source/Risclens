{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.risclens.com"
        }
      ],
      "destination": "https://risclens.com/:path*",
      "permanent": true
    }
  ],
  "functions": {
    "app/api/generate-pdf/route.ts": {
      "maxDuration": 30
    },
    "app/api/cron/day-3/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/day-7/route.ts": {
      "maxDuration": 60
    },
    "app/api/admin/export-csv/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/day-3",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/day-7",
      "schedule": "0 9 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}