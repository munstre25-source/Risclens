# =============================================================================
# RISCLENS SOC 2 CALCULATOR - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local for local development
# All these values must be set in Vercel Dashboard for production

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION (Required)
# -----------------------------------------------------------------------------
# Your Supabase project URL (found in Project Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key (safe for client-side, read-only access)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key (SERVER-SIDE ONLY - never expose to client)
# Used for admin operations, PDF uploads, and database writes
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase storage bucket name for PDF files (PRIVATE bucket, uses signed URLs)
SUPABASE_STORAGE_BUCKET=leads-pdf

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION - SendGrid (Required for email features)
# -----------------------------------------------------------------------------
# SendGrid API key for transactional emails
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Verified sender email address in SendGrid
EMAIL_FROM=noreply@yourdomain.com

# Reply-to email address (optional, defaults to EMAIL_FROM)
EMAIL_REPLY_TO=hello@yourdomain.com

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION - SMTP (Fallback, Optional)
# -----------------------------------------------------------------------------
# Used if SendGrid fails or is not configured
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# -----------------------------------------------------------------------------
# ADMIN CONFIGURATION (Required)
# -----------------------------------------------------------------------------
# Secret token to access admin panel (server-side check only)
# Generate a strong random string: openssl rand -hex 32
ADMIN_SECRET=your-admin-secret-here

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION (Required)
# -----------------------------------------------------------------------------
# Base URL of your application (no trailing slash)
# Use localhost for dev, your domain for production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate limiting: max requests per minute per IP (default: 60)
RATE_LIMIT_PER_MIN=60

# Upstash Redis (required for API rate limiting)
UPSTASH_REDIS_REST_URL=your-upstash-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# -----------------------------------------------------------------------------
# PDF GENERATION (Required for Vercel - choose one)
# -----------------------------------------------------------------------------
# PDFShift API key (recommended) - Sign up at https://pdfshift.io
# Free tier: 250 PDFs/month
PDFSHIFT_API_KEY=your-pdfshift-api-key

# OR Browserless API key - Sign up at https://browserless.io
# Free tier: 1000 units/month
# BROWSERLESS_API_KEY=your-browserless-api-key

# -----------------------------------------------------------------------------
# CRON AUTHENTICATION (Required for cron jobs)
# -----------------------------------------------------------------------------
# Secret to authenticate cron job requests
# Generate: openssl rand -hex 32
CRON_SECRET=your-cron-secret-here

# Batch size for cron email jobs (default: 50)
CRON_BATCH_SIZE=50

# -----------------------------------------------------------------------------
# OPTIONAL: FUTURE INTEGRATIONS
# -----------------------------------------------------------------------------
# Webhook URL for external integrations (optional)
# WEBHOOK_EXTERNAL_URL=https://your-webhook-endpoint.com

# Analytics tracking ID (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
